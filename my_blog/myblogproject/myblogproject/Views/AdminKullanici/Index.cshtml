@model IEnumerable<myblogproject.Models.Kullanici>

@{
    ViewBag.Title = "Kullanıcılar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Kullanıcılar</h2>

<p>
    @Html.ActionLink("Yeni Kullanıcı", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Yetki.YetkiHali)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AdSoyad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Eposta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Parola)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GirisID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Yetki.YetkiHali)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AdSoyad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Eposta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Parola)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GirisID)
        </td>
        <td>
            <span>
                <a href="@Url.Action("Edit","AdminKullanici",new { id = item.KullaniciID })"><span class="glyphicon glyphicon-pencil"></span></a>
            </span>
            <span>
                <a href="@Url.Action("Delete","AdminKullanici",new { id = item.KullaniciID })"><span class="glyphicon glyphicon-remove"></span></a>
            </span>
            <span>
                <a href="@Url.Action("Details","AdminKullanici",new { id = item.KullaniciID })"><span class="glyphicon glyphicon-search"></span></a>
            </span>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.KullaniciID }) |
            @Html.ActionLink("Details", "Details", new { id=item.KullaniciID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.KullaniciID })*@
        </td>
    </tr>
}

</table>
